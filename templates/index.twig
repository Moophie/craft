{% extends "_layout" %}

{% block content %}

    <my-element></my-element>
    <my-second-element></my-second-element>

    <div class="section section--default">
        <div class="container px-5 mx-auto">
            <div class="grid">
                <div class="grid__12 grid__8@med">
                    {% include '_snippet/_content/_intro' %}
                </div>
            </div>
        </div>
    </div>

    {% set news = craft.entries().section('news').with(['overviewImage']).orderBy('postDate DESC').limit(3) %}
    {% if news|length %}
        <div class="section section--default">
            <div class="container px-5 mx-auto">
                <div class="section__content">
                    <h2 class="mb-4 text-4xl font-bold heading-2">{{ 'Laatste nieuws'|t }}</h2>
                    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3">
                        {% for newsEntry in news.all %}
                            {% include '_snippet/_item/_news' %}
                        {% endfor %}
                    </div>
                    {% set overview = craft.entries.section('newsOverview').one() %}
                    <div class="my-10 text-center">
                        <a href="{{ overview.url }}" class="px-4 py-2 font-bold text-white bg-blue-500 rounded btn hover:bg-blue-700">{{ "Meer nieuws"|t }}</a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
