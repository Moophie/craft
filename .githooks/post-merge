# git hook to run a command after `git pull` if a specified file was changed
# Run `chmod +x post-merge` to make it executable then put it into `.git/hooks/`.

function source_home_file {
  file="$HOME/$1"
  [[ -f "${file}" ]] && source "${file}"
}
source_home_file ".bash_profile" || source_home_file ".zshrc" || true

changed_files="$(git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD)"

check_run() {
	echo "$changed_files" | grep --quiet "$1" && eval "$2"
}

check_run package.json "yarn install"
check_run tailoff "yarn run dev"
check_run composer.json "composer install"
check_run config/project "php craft project-config/apply"